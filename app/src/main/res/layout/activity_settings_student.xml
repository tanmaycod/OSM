<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".Student.SettingsStudent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:letterSpacing="0.03"
                    android:text="ACCOUNT"
                    android:textColor="?attr/textColorHeading"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onSettingsChangePassword"
                    android:outlineAmbientShadowColor="?attr/backgroundColor"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="?attr/backgroundColor"
                    app:cardBackgroundColor="?attr/backgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.03"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Change Password"
                            android:textColor="?attr/textColor"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_next_navigation" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onSettingsDeleteAccount"
                    android:outlineAmbientShadowColor="?attr/backgroundColor"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="?attr/backgroundColor"
                    app:cardBackgroundColor="?attr/backgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.03"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Delete Account"
                            android:textColor="?attr/textColor"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_next_navigation" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:letterSpacing="0.03"
                    android:text="MORE"
                    android:textColor="?attr/textColorHeading"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onCredits"
                    android:outlineAmbientShadowColor="?attr/backgroundColor"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="?attr/backgroundColor"
                    app:cardBackgroundColor="?attr/backgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.03"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Credits"
                            android:textColor="?attr/textColor"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_next_navigation" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:outlineAmbientShadowColor="?attr/backgroundColor"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="?attr/backgroundColor"
                    app:cardBackgroundColor="?attr/backgroundColor">

                    <Switch
                        android:id="@+id/myswitch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:text="Day Mode"
                        android:textSize="18sp"
                        android:textColor="?attr/textColor"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onSettingsFeedback"
                    android:outlineAmbientShadowColor="?attr/backgroundColor"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="?attr/backgroundColor"
                    app:cardBackgroundColor="?attr/backgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.03"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="FeedBack"
                            android:textColor="?attr/textColor"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_next_navigation" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onSettingsContactUs"
                    android:outlineAmbientShadowColor="?attr/backgroundColor"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="?attr/backgroundColor"
                    app:cardBackgroundColor="?attr/backgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.03"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Contact Us"
                            android:textColor="?attr/textColor"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_next_navigation" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onPrivacyPolicy"
                    android:outlineAmbientShadowColor="?attr/backgroundColor"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="?attr/backgroundColor"
                    app:cardBackgroundColor="?attr/backgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.03"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Privacy Policy"
                            android:textColor="?attr/textColor"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_next_navigation" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:letterSpacing="0.03"
            android:padding="15dp"
            android:text="OSM for Android v1.0"
            android:textAlignment="center"
            android:textColor="?attr/textColor"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>