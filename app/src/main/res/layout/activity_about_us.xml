<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    tools:context=".AboutUs">

    <ScrollView
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rasa"
                android:padding="10dp"
                android:text="If you want to develop android application
or want to redesign your old application then contact us.
Below details are our personal contact details call
us or send a message we will response you as soon as
we able to talk."
                android:textAlignment="center"
                android:textColor="?attr/textColorHeading"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="?attr/viewColor" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="240dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="240dp"
                            android:background="@drawable/tejas"
                            android:padding="10dp" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredericka_the_great"
                        android:text="Tejas Patil"
                        android:textAlignment="center"
                        android:textColor="?attr/textColorHeading"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rasa"
                        android:padding="10dp"
                        android:text="Android Application Developer,\nDesigner and Web Developer"
                        android:textAlignment="center"
                        android:textColor="?attr/textColorHeading"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="?attr/viewColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="15dp"
                            android:background="@drawable/insta"
                            android:onClick="openTejasInstagram" />

                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/gmail"
                            android:onClick="openTejasGmail" />

                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="15dp"
                            android:background="@drawable/whatsapp"
                            android:onClick="openTejasWhatsapp" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="240dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="240dp"
                            android:background="@drawable/yash"
                            android:padding="10dp" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredericka_the_great"
                        android:text="Yashraj Chavan"
                        android:textAlignment="center"
                        android:textColor="?attr/textColorHeading"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rasa"
                        android:padding="10dp"
                        android:text="Android Application Developer,\nWeb Developer and Python Developer"
                        android:textAlignment="center"
                        android:textColor="?attr/textColorHeading"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="?attr/viewColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="15dp"
                            android:background="@drawable/insta"
                            android:onClick="openYashInstagram" />

                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/gmail"
                            android:onClick="openYashGmail" />

                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="15dp"
                            android:background="@drawable/whatsapp"
                            android:onClick="openYashWhatsapp" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

</LinearLayout>